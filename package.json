{
  "name": "@fruk/simulator-core",
  "version": "1.6.0",
  "description": "FIRST Robotics Simulator Core",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build+watch": "tsc -w",
    "build:netlify": "webpack --progress -p",
    "start-web": "webpack-dev-server",
    "format": "prettier --write src",
    "checkFormat": "prettier --check src",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "docs": "npx typedoc --plugin typedoc-plugin-markdown --mode file ./src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FRUK-Simulator/SimulatorCore.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FRUK-Simulator/SimulatorCore/issues"
  },
  "homepage": "https://github.com/FRUK-Simulator/SimulatorCore#readme",
  "dependencies": {
    "planck-js": "^0.3.18",
    "stats.js": "^0.17.0",
    "three": "^0.117.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/dat.gui": "^0.7.5",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.14",
    "@types/stats.js": "^0.17.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dat.gui": "^0.7.7",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0",
    "ts-loader": "^7.0.5",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.4.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "hooks": {
    "pre-commit": "npm run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "prettier --write"
    ]
  }
}
